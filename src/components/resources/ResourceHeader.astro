---
import { Image } from "astro:assets";
import logo from "../../assets/images/content/arm-logo.jpg";
import linaro_logo from "../../assets/images/linaro-logo.png";
import dayjs from "dayjs";

const { data } = Astro.props;

const dateObj = dayjs(data.date);
const dateString = dateObj.format("dddd, MMMM D, YYYY");

const readTime = `${Math.ceil(data.body?.split(" ").length / 183)} min read`;
---

<div class="bg-[#f8f9fa]">
  <div class="mx-auto py-4 md:max-w-[1200px] w-auto">
    <div class="flex flex-wrap">
      <div
        class="flex md:flex-row flex-col max-w-[1800px] items-center mx-auto md:mx-0"
      >
        <div
          class="overflow-clip rounded-full bg-white image-hover-effect w-[100px] h-[100px]"
        >
          {
            data.data.author == "linaro" ? (
              <Image
                class="object-cover w-full mt-6"
                src={linaro_logo}
                alt="logo"
              />
            ) : (
              <Image class="object-cover w-full mt-6" src={logo} alt="logo" />
            )
          }
        </div>
        <div class="flex flex-col ml-4 text-md">
          <div>
            <div class="mx-2 p-3">
              <strong class="pr-4">{data.data.author}</strong> |
              <span class="px-4 font-normal">{dateString}</span> | <span
                class="font-bold pr-4">{readTime}</span
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
